import SwiftUI

struct ContentView: View {
    @StateObject var viewModel = ViewModel()
    var body: some View {
        VStack {
            NavigationStack{
                ZStack{
                    Color.color
                        .ignoresSafeArea()
                    VStack{
//                    ALUNO
                        NavigationLink(destination: AlunoView()){
                            ZStack{
                                Rectangle()
                                    .frame(width: 175, height: 55)
                                    .cornerRadius(7)
                                    .foregroundColor(.ciano)
                                Text("Aluno")
                                    .foregroundStyle(.black)
                                    .font(.system(size: 25))
                            }
                        }
                        .padding()
//                    PROFESSOR
                        NavigationLink(destination: ProfessorView()){
                            ZStack{
                                Rectangle()
                                    .frame(width: 175, height: 55)
                                    .cornerRadius(7)
                                    .foregroundColor(.cinza)
                                Text("Professor")
                                    .foregroundStyle(.black)
                                    .font(.system(size: 25))
                            }
                        }
                    }
                }
            }
            .accentColor(.black)
        }
    }
}

#Preview {
    ContentView()
}
