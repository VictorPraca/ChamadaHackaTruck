import SwiftUI

struct ContentView: View {
    @StateObject var viewModel = ViewModel()
    var tab = 0
    var body: some View {
        VStack {
            NavigationStack{
                ZStack{
                    Color.azulP
                        .ignoresSafeArea()
                    VStack{
//                    ALUNO

                            NavigationLink(destination: AlunoView()){
                                ZStack{
                                    Rectangle()
                                        .frame(width: 175, height: 55)
                                        .cornerRadius(7)
                                        .foregroundColor(.azulR)
                                    Text("Aluno")
                                        .foregroundStyle(.white)
                                        .font(.system(size: 25))
                                }
                            }
                            .padding()
                        
//                    PROFESSOR
                        NavigationLink(destination: ProfessorView()){
                            ZStack{
                                Rectangle()
                                    .frame(width: 175, height: 55)
                                    .cornerRadius(7)
                                    .foregroundColor(.azulR)
                                Text("Professor")
                                    .foregroundStyle(.white)
                                    .font(.system(size: 25))
                            }
                        }
                    }
                }
            }
            .accentColor(.black)
        }.onAppear(){
            viewModel.fetchAluno()
        }
    }
}

#Preview {
    ContentView()
}
